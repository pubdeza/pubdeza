<%= @posts.each do |post| %>
<h1>
  <%= post.title %>
  <!-- postの投稿者がcurrent_userと一致した場合 -->
  <% if current_user.id === post.user_id %>
    <span><%= link_to "編集", edit_post_path %></span>
    <span><%= link_to "削除", post_path, method:"delete" %></span>
  <% end %>
</h1>
<h2>投稿者：<%= post.user.username %></h2>
<p><%= post.contents %></p>
<% end %>
