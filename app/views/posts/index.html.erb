<div id="main">
  <ul class="posts">
    <%= @posts.first(5).each_with_index do |post, i| %>
      <%= link_to post_path(post.id), :class => "post_link" do %>
        <li class="each_post">
          <% if post.image? %>
            <%= image_tag post.image.url %>
          <% else %>
            <div class="noimage"></div>
          <% end %>
          <h1><%= post.title%></h1>
          <h2>
            <% if post.user.image? %>
              <%= image_tag post.user.image.thumb.url, :class => "icon" %>
            <% else %>
              <img class="icon" alt="No image" src="/assets/noimage.png" />
          ã€€<% end %>
            <span class="auther-name"><%= post.user.username %></span>
          </h2>
          <span class="favorites-count"><%= image_tag "Star.png", class: "favorite-icon" %><%= post.favorites.count %></span>
          <span class="comments-count"><%= image_tag "Group 7.png", class: "icon comment-icon" %><%= post.comments.count %></span>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
