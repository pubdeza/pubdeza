<h1>新規投稿する</h1>
<%= form_for(@post) do |f| %>
  <!-- エラーがあった場合の表示場所 -->
  <% if @post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div>
    <%= f.label "タイトル" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label "icatch" %>
    <%= f.text_area :icatch %>
  </div>
  <div>
    <%= f.label "内容" %>
    <%= f.text_area :contents %>
  </div>
  <%= f.submit "保存" %>
<% end %>
